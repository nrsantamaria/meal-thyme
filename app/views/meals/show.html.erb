<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%= @meal.title %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-6">
      <%= image_tag(@meal.imageUrl, size: "400x400",  alt:'recipe image', id:'recipeImg') %>
    </div>
    <div class="col-md-6">
      <h4>Instructions</h4>
      <ul>
        <% @meal.instructions.each do |step| %>
          <li><%= step %></li>
        <% end %>
      </ul>
      <div class="well">
        Cal: <%= @recipe.calories %> | Protein: <%= @recipe.protein %> | Fat: <%= @recipe.fat %> | Carbs: <%= @recipe.carbohydrates %>
      </div>
      <% if admin? %>
        <div class="well">
          <%= link_to "Edit", edit_recipe_path(@meal.recipe) %> | <%= link_to "Delete", recipe_path(@meal.recipe), :data => {:confirm => "Are you sure?",
            :method => "delete"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
