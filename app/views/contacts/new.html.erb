<h3>Contact Us</h3>
<p>Have a question or comment? Send us a message!</p>
<div class="container">
  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :required => true, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :required => true, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :message, :required => true, class:'form-control' %>
    </div>

    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Send message', :class=> "btn btn-default" %>
    </div>
  <% end %>
</div>
