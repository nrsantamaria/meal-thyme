<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3><%= @recipe.title %></h3>
    </div>
    <div class="panel-body">
      <div class="col-md-6">
        <%= image_tag(@recipe.imageUrl, size: "400x400",  alt:'recipe image', id:'recipeImg') %>
      </div>
      <div class="col-md-6">
        <h4>Instructions</h4>
        <ul>
          <% @recipe.instructions.each do |step| %>
            <li><%= step %></li>
          <% end %>
        </ul>
        <div class="well">
          Cal: <%= @recipe.calories %> | Protein: <%= @recipe.protein %> | Fat: <%= @recipe.fat %> | Carbs: <%= @recipe.carbohydrates %>
        </div>
      </div>
    </div>
  </div>
</div>
