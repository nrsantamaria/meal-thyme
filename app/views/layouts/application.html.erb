<!DOCTYPE html>
<html>
  <head>
    <title>MealThyme</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Zilla+Slab" rel="stylesheet">
  </head>
  <%= render 'layouts/messages' %>
  <body>
    <div class="body">
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <footer class="bottom-nav">
      <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container-fluid">
          <div class="navbar-header">
            <!-- <%= link_to image_tag('white-text-logo.png', size: "50x50"), '/', {class: "navbar-brand"} %> -->
            <%= link_to 'Home', '/', {class: "navbar-brand"} %>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to "#{current_user.email}'s Profile", user_path(current_user) %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: 'delete' %></li>
            <% end %>
            <li><%= link_to "About", about_home_index_path %></li>
            <li><%= link_to "FAQs", faqs_home_index_path %></li>
            <li><%= link_to "Contact", contact_home_index_path %></li>
          </ul>
        </div>
      </nav>
    </footer>
  </body>
</html>
